rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all users
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow authenticated users to upload profile images
    match /profileImages/profile_{userId}_{timestamp}.{extension} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload any file (for flexibility)
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}